@model ProyectoClub.Models.Inscripcion

@{
    ViewData["Title"] = "Inscribirse";
}

<h1>Inscribirse</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="All" class="alert alert-danger"></div>

            <div class="form-group">
                <label asp-for="SedeId" class="control-label"></label>
                <select asp-for="SedeId" class="form-control" asp-items="ViewBag.SedeId"></select>
                <span asp-validation-for="SedeId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ActividadId" class="control-label">Actividad (opcional)</label>
                <select asp-for="ActividadId" class="form-control" asp-items="ViewBag.ActividadId">
                    <option value="">-- Ninguna --</option>
                </select>
                <span asp-validation-for="ActividadId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EventoId" class="control-label">Evento (opcional)</label>
                <select asp-for="EventoId" class="form-control" asp-items="ViewBag.EventoId">
                    <option value="">-- Ninguno --</option>
                </select>
                <span asp-validation-for="EventoId" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Confirmar inscripción" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Volver</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
